#!/usr/bin/pyrhon3
#grab email
import requests
import re
url = "https://www.freebsd.org/community/mailinglists.html"
pattern="\w+@\w+[.]\w+"
r = requests.get(url)
if r.status-code in [200,201,202]:   #check connection is connect or not
    content=r.text
    lst=re.findall(pattern,content)
    with open("email.txt" , mode="w") as f:
        f.write(lst)
    with open ("email.txt",mode="r") as fo:
        print(fo.read())


